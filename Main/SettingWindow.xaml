<Window
    x:Class="ClassPanel.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:ClassPanel"
    xmlns:con="clr-namespace:ClassPanel.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:me="clr-namespace:ClassPanel"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    x:Name="win"
    Title="ClassPanel 设置"
    Width="900"
    Height="600"
    Padding="20"
    AllowsTransparency="True"
    Closed="Window_Closed"
    Closing="Window_Closing"
    FontFamily="HarmonyOS Sans SC"
    Loaded="Window_Loaded"
    Style="{DynamicResource ClassPanelWindow}"
    TextElement.FontSize="13"
    TextElement.Foreground="{DynamicResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <c:ColorToBrushConverter x:Key="c2b" />
    </Window.Resources>

    <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
        <Grid x:Name="grid">
            <DockPanel Margin="8,15,8,10">
                <tb:TaskbarIcon MenuActivation="LeftOrRightClick" ToolTipText="ClassPanel Fire">
                    <tb:TaskbarIcon.ContextMenu>
                        <ContextMenu Style="{DynamicResource MaterialDesignContextMenu}">
                            <MenuItem
                                x:Name="Show"
                                Click="Show_Click"
                                Header="显示"
                                Icon="{icon:BootstrapIcons Kind=Window}"
                                Style="{DynamicResource menuitem1}" />
                            <MenuItem
                                x:Name="Exit"
                                Click="Exit_Click"
                                Header="退出"
                                Icon="{icon:Coolicons Kind=Exit}"
                                Style="{DynamicResource menuitem1}" />
                        </ContextMenu>
                    </tb:TaskbarIcon.ContextMenu>
                </tb:TaskbarIcon>
                <md:Card
                    Margin="10"
                    Padding="10"
                    DockPanel.Dock="Top">

                    <TextBlock
                        Margin="10"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource MaterialDesignHeadline5TextBlock}"><Run Text="[ \ ] " /><Run Text="Class" /><Run Text="Panel 设置" /></TextBlock>
                </md:Card>

                <TabControl
                    Margin="5"
                    BorderBrush="{x:Null}"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                    Style="{DynamicResource TabControlSliding}"
                    TabStripPlacement="Left">
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="House" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                    Text="基本" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
                            <hc:ScrollViewer>
                                <StackPanel>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <con:ConSetting
                                            Kind="Power"
                                            Subtitle="开机启动"
                                            Text="开启后，ClassPanel 能够在系统启动时自动运行，无需手动打开"
                                            ToggleButton.Click="s" />
                                    </md:Card>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <con:ConSetting
                                            Kind="InfoCircle"
                                            Subtitle="教学勿扰"
                                            Text="开启后，ClassPanel 在出现错误时不会弹出错误窗口，以免影响教学"
                                            ToggleButton.Click="s" />
                                    </md:Card>
                                    <Separator Style="{DynamicResource Sep}" />
                                </StackPanel>
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="Palette" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="外观" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
                            <hc:ScrollViewer>
                                <StackPanel>
                                    <md:Card Margin="10" Padding="10">
                                        <StackPanel>
                                            <con:ConSetting
                                                Kind="Brush"
                                                Subtitle="设置主题色"
                                                Text="个性化 ClassPanel" />
                                            <DockPanel VerticalAlignment="Center">
                                                <StackPanel Margin="10,10,5,10">
                                                    <TextBox
                                                        Width="90"
                                                        Margin="0,0,0,5"
                                                        Padding="5"
                                                        VerticalAlignment="Center"
                                                        Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                                        Text="{Binding ElementName=MainColorPicker, Path=Color, Mode=TwoWay}"
                                                        TextChanged="TextBox_TextChanged" />
                                                    <Border
                                                        Height="55"
                                                        VerticalAlignment="Center"
                                                        Background="{Binding Converter={StaticResource c2b}, ElementName=MainColorPicker, Path=Color}"
                                                        CornerRadius="3" />
                                                </StackPanel>
                                                <md:ColorPicker
                                                    x:Name="MainColorPicker"
                                                    Height="100"
                                                    Margin="10,10,20,10"
                                                    ColorChanged="MainColorPicker_ColorChanged"
                                                    DockPanel.Dock="Right"
                                                    Color="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=c:SettingWindow}, Path=MainColor, Mode=TwoWay}" />
                                            </DockPanel>
                                        </StackPanel>
                                    </md:Card>
                                    <md:Card Margin="10" Padding="10">
                                        <DockPanel>
                                            <con:ConSetting
                                                Kind="EmojiSunglassesFill"
                                                Subtitle="暗黑模式"
                                                Text="开启后，ClassPanel 会变得有点帅~ doge" />
                                            <ToggleButton
                                                Margin="20"
                                                HorizontalAlignment="Right"
                                                IsChecked="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=c:SettingWindow}, Path=IsDark, Mode=TwoWay}" />
                                        </DockPanel>
                                    </md:Card>
                                </StackPanel>
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>

                    <TabItem ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="Compass" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="组件" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
                            <hc:ScrollViewer>

                                <DockPanel />
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>
                    <TabItem x:Name="UpdateItem">
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="CloudDownload" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="更新" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
                            <hc:ScrollViewer>
                                <StackPanel>
                                    <md:Card
                                        Margin="10,10,10,10"
                                        Padding="20"
                                        DockPanel.Dock="Top">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <icon:PackIconBootstrapIcons
                                                    x:Name="UpdateIcon"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="20,0,0,0"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Kind="Check2Square" />
                                                <TextBlock
                                                    x:Name="UpdateLabel"
                                                    Margin="10,0,0,0"
                                                    Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                                                    Text="已是最新版本" />
                                            </StackPanel>
                                            <DockPanel>

                                                <TextBlock
                                                    x:Name="VersionLabel"
                                                    Margin="20,5,0,0"
                                                    Text="当前版本：0.0.1 Fire   最新版本：0.0.1 Fire" />

                                                <StackPanel
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <ProgressBar
                                                        x:Name="LoadBar"
                                                        Width="20"
                                                        Height="20"
                                                        Margin="0,10,10,0"
                                                        IsIndeterminate="True"
                                                        Style="{DynamicResource MaterialDesignCircularProgressBar}"
                                                        Visibility="Hidden" />
                                                    <Button
                                                        x:Name="UpdateButton"
                                                        Width="98"
                                                        Height="40"
                                                        Margin="0,10,20,0"
                                                        HorizontalContentAlignment="Center"
                                                        Click="UpdateButton_Click"
                                                        Content="检测更新" />
                                                </StackPanel>
                                            </DockPanel>
                                        </StackPanel>
                                    </md:Card>

                                    <md:Card
                                        Margin="10,10,10,10"
                                        Padding="20"
                                        DockPanel.Dock="Top">
                                        <StackPanel>
                                            <mdxam:MarkdownScrollViewer x:Name="UpdateMarkdownLabel" />
                                        </StackPanel>
                                    </md:Card>
                                </StackPanel>
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="Activity" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="高级" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">
                            <hc:ScrollViewer>
                                <DockPanel />
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="Database" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="数据" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">

                            <hc:ScrollViewer>
                                <StackPanel>
                                    <con:ConSettingTitle Kind="DatabaseGear" Text="配置应用数据" />
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <StackPanel>
                                            <con:ConSetting
                                                Kind="FileCode"
                                                Subtitle="更改应用数据文件"
                                                Text="更改 ClassPanel 的数据文件，可用于数据迁移与多配置" />
                                            <DockPanel DockPanel.Dock="Bottom">
                                                <TextBox
                                                    x:Name="ProfileDataFileText"
                                                    Width="500"
                                                    MinWidth="200"
                                                    Margin="10"
                                                    HorizontalAlignment="Center"
                                                    Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=c:SettingWindow}, Path=ProfileDataFileString, Mode=TwoWay}" />
                                                <Button
                                                    x:Name="ProfileDataFileButton"
                                                    Margin="10,10,20,10"
                                                    HorizontalAlignment="Right"
                                                    Click="ProfileDataFileButton_Click"
                                                    DockPanel.Dock="Right">
                                                    选择文件
                                                </Button>
                                            </DockPanel>
                                        </StackPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <con:ConSetting
                                            Kind="Save"
                                            Subtitle="自动保存"
                                            Text="开启后，ClassPanel 将每间隔10分钟自动保存 ClassPanel 数据文件"
                                            ToggleButton.Click="s" />
                                    </md:Card>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                Kind="Trash"
                                                Subtitle="重置数据"
                                                Text="这将清空所有的 ClassPanel 的数据文件，请谨慎操作" />
                                            <Button
                                                Margin="20"
                                                HorizontalAlignment="Right"
                                                Background="Red"
                                                BorderBrush="Red"
                                                DockPanel.Dock="Right">
                                                重置 ClassPanel
                                            </Button>
                                        </DockPanel>
                                    </md:Card>
                                    <con:ConSettingTitle Kind="DatabaseCheck" Text="备份与还原" />
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="DatabaseAdd"
                                                Subtitle="备份应用数据文件"
                                                Text="备份 ClassPanel 的数据文件，未雨绸缪" />
                                            <Button
                                                Margin="20"
                                                HorizontalAlignment="Right"
                                                DockPanel.Dock="Right">
                                                保存文件
                                            </Button>
                                        </DockPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <con:ConSetting
                                            Kind="DatabaseCheck"
                                            Subtitle="自动备份"
                                            Text="开启后，ClassPanel 将每隔7天自动备份 ClassPanel 数据文件"
                                            ToggleButton.Click="s" />
                                    </md:Card>
                                    <md:Card
                                        Margin="10"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="DatabaseGear"
                                                Subtitle="还原应用数据文件"
                                                Text="从备份中还原 ClassPanel 的数据文件，必须是 ClassPanel 数据文件才能正常识别" />
                                            <Button
                                                Margin="10,10,20,10"
                                                HorizontalAlignment="Right"
                                                DockPanel.Dock="Right">
                                                保存文件
                                            </Button>
                                        </DockPanel>
                                    </md:Card>
                                </StackPanel>
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>

                    <TabItem ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <TabItem.Header>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <icon:PackIconBootstrapIcons
                                    Margin="0,5,5,5"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Stretch"
                                    Kind="InfoCircle" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                    Text="关于" />
                            </StackPanel>
                        </TabItem.Header>
                        <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">

                            <hc:ScrollViewer>
                                <StackPanel>
                                    <md:Card
                                        Margin="10,10,10,10"
                                        Padding="10"
                                        DockPanel.Dock="Top">

                                        <StackPanel>
                                            <Border Background="BlanchedAlmond" CornerRadius="5">
                                                <hc:Watermark FontSize="30" Mark="ClassPanel Fire 测试版本禁止发布   ">
                                                    <TextBlock
                                                        Width="733"
                                                        Height="120"
                                                        Margin="0,0,0.333,0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="HarmonyOS Sans Sc"
                                                        FontSize="86"
                                                        FontWeight="Medium"
                                                        Foreground="#E5FFFFFF"
                                                        Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                                                        Text="[ \ ] ClassPanel"
                                                        TextAlignment="Center" />
                                                </hc:Watermark>
                                            </Border>
                                            <Separator Style="{DynamicResource MaterialDesignSeparator}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Padding="10,5,0,5" Style="{DynamicResource MaterialDesignHeadline5TextBlock}"><Run Text="[ \ ] ClassPanel" /></TextBlock>
                                                <TextBlock
                                                    Padding="5,5,0,0"
                                                    VerticalAlignment="Top"
                                                    Style="{DynamicResource MaterialDesignBody2TextBlock}"><Run Text="0.0.1" /></TextBlock>
                                            </StackPanel>
                                            <TextBlock Padding="10,4" Style="{DynamicResource MaterialDesignBody1TextBlock}"><Run Text="由 [ \ ] 对角线工作室 维护与更新" /></TextBlock>
                                        </StackPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10,3"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="Link"
                                                Subtitle="官网"
                                                Text="访问 ClassPanel 官方网站以获得更多帮助" />
                                            <icon:PackIconBootstrapIcons
                                                Margin="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Right"
                                                Kind="Link45deg" />
                                        </DockPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10,3"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="Github"
                                                Subtitle="Github"
                                                Text="访问 ClassPanel 仓库以获得更多信息" />
                                            <icon:PackIconBootstrapIcons
                                                Margin="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Right"
                                                Kind="Link45deg" />
                                        </DockPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10,3"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="Git"
                                                Subtitle="Gitee"
                                                Text="访问 ClassPanel 仓库以获得更多信息" />
                                            <icon:PackIconBootstrapIcons
                                                Margin="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Right"
                                                Kind="Link45deg" />
                                        </DockPanel>
                                    </md:Card>

                                    <md:Card
                                        Margin="10,3"
                                        Padding="10"
                                        DockPanel.Dock="Top">
                                        <DockPanel>
                                            <con:ConSetting
                                                DockPanel.Dock="Left"
                                                Kind="Gift"
                                                Subtitle="捐赠"
                                                Text="支持 [ \ ] 对角线工作室 促进 ClassPanel 项目繁荣发展" />
                                            <icon:PackIconBootstrapIcons
                                                Margin="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Right"
                                                Kind="Link45deg" />
                                        </DockPanel>
                                    </md:Card>
                                    <md:Card
                                        Margin="10,10,10,3"
                                        Padding="20"
                                        DockPanel.Dock="Top">
                                        <StackPanel>
                                            <TextBlock Margin="0,0,0,10" Style="{DynamicResource MaterialDesignSubtitle1TextBlock}">感谢以下贡献者</TextBlock>
                                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                                <md:Chip Content="卡尔斯厄" Icon="卡" />
                                                <md:Chip Content="科学の小猫娘" Icon="科" />
                                            </StackPanel>

                                            <TextBlock Margin="0,10" Style="{DynamicResource MaterialDesignSubtitle1TextBlock}">感谢以下项目</TextBlock>
                                            <WrapPanel>
                                                <md:Chip Content="Harmony OS Sans" Icon="H" />
                                                <md:Chip Content="Material Design In XAML" Icon="M" />
                                                <md:Chip Content="Newtonsoft.Json" Icon="N" />
                                                <md:Chip Content="VORE API" Icon="V" />
                                                <md:Chip Content="工具栈" Icon="G" />
                                                <md:Chip Content="HandyControl" Icon="H" />
                                                <md:Chip Content="MdXaml" Icon="M" />
                                                <md:Chip Content="Downloader" Icon="D" />
                                                <md:Chip Content="Hardcodet.NotifyIcon.Wpf" Icon="H" />
                                                <md:Chip Content="MahApps.Metro.IconPacks" Icon="M" />
                                                <md:Chip Content="Wpf" Icon="W" />
                                                <md:Chip Content=".NET" Icon="N" />
                                            </WrapPanel>
                                        </StackPanel>
                                    </md:Card>

                                    <md:Card
                                        Margin="10,3"
                                        Padding="10,10,10,1"
                                        DockPanel.Dock="Top">
                                        <StackPanel Margin="10">
                                            <TextBlock Margin="1" FontSize="18">Copyright © 2025 Diagonal Studio</TextBlock>
                                            <TextBlock Margin="3" FontSize="10">ClassPanel 基于 MIT License 获得许可</TextBlock>
                                        </StackPanel>
                                    </md:Card>
                                </StackPanel>
                            </hc:ScrollViewer>
                        </hc:TransitioningContentControl>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </hc:TransitioningContentControl>
</Window>