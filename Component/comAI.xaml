<Window
    x:Class="DPanel.comAI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:DPanel.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:DPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="350"
    Height="600"
    AllowsTransparency="True"
    FontFamily="HarmonyOS Sans SC"
    Loaded="Window_Loaded"
    Style="{DynamicResource DPanelWindow}"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStyle="None"
    mc:Ignorable="d">
    <hc:TransitioningContentControl  TransitionMode="Bottom2TopWithFade">
        <Grid x:Name="grid">

            <DockPanel>
                <hc:ScrollViewer
                    Height="439"
                    Margin="20,20,20,0"
                    DockPanel.Dock="Top">
                    <ListBox x:Name="AnswerText" Style="{DynamicResource MaterialDesignCardsListBox}" />
                </hc:ScrollViewer>
                <ProgressBar
                    x:Name="LoadBar"
                    Margin="20,0,20,20"
                    DockPanel.Dock="Bottom"
                    IsIndeterminate="True"
                    Visibility="Hidden" />

                <Button
                    x:Name="AskButton"
                    Margin="20,0,20,5"
                    Click="Button_Click"
                    DockPanel.Dock="Bottom">
                    提问
                </Button>
                <TextBox
                    x:Name="QuestionText"
                    Height="40"
                    Margin="20,0,20,10"
                    Padding="10"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Top"
                    DockPanel.Dock="Bottom"
                    Foreground="{DynamicResource ForeColor}"
                    Style="{DynamicResource MaterialDesignOutlinedTextBox}">
                    Ask me anything
                </TextBox>
            </DockPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
        </Grid>
    </hc:TransitioningContentControl>
</Window>