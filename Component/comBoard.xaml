<UserControl
    x:Class="ClassPanel.comBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:ClassPanel.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:ClassPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="400"
    Height="200"
    Background="{x:Null}"
    BorderBrush="#FFE6D9D9"
    FontFamily="HarmonyOS Sans SC"
    Style="{DynamicResource ClassPanelItem}"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid x:Name="grid">

        <DockPanel x:Name="F" Margin="20,15,0,20">
            <TextBlock
                Margin="0,0,20,0"
                Cursor="Hand"
                DockPanel.Dock="Top"
                MouseDown="TextBlock_MouseDown"
                Style="{DynamicResource MaterialDesignSubtitle1TextBlock}">
                公告板
            </TextBlock>
            <hc:ScrollViewer
                x:Name="Items"
                Margin="0,0,10,0"
                DockPanel.Dock="Bottom">
                <StackPanel>
                    <ListBox
                        x:Name="Card"
                        Margin="0,0,10,0"
                        DockPanel.Dock="Top"
                        Style="{DynamicResource MaterialDesignCardsListBox}" />
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        DockPanel.Dock="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Width="30"
                            Height="30"
                            Margin="5"
                            Click="Button_Click"
                            Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
                            <icon:BootstrapIcons
                                Width="12"
                                Height="12"
                                Kind="InputCursorText" />
                        </Button>

                        <Button
                            Width="30"
                            Height="30"
                            Margin="5"
                            Click="Button_Click_1"
                            Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
                            <icon:BootstrapIcons
                                Width="12"
                                Height="12"
                                Kind="Brush" />
                        </Button>
                        <Button
                            Width="30"
                            Height="30"
                            Margin="5"
                            Click="Button_Click_2"
                            Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
                            <icon:BootstrapIcons
                                Width="12"
                                Height="12"
                                Kind="Trash" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </hc:ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>