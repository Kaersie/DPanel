<UserControl
    x:Class="DPanel.Controls.ConMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:DPanel.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource BackColor}"
    mc:Ignorable="d">
    <Grid>
        <hc:DialogContainer>
            <hc:TransitioningContentControl  TransitionMode="Bottom2TopWithFade">
                <hc:SimplePanel>
                    <StackPanel Margin="20" Orientation="Vertical">
                        <TextBlock Margin="20">DPanel 现在还不能自己更新~</TextBlock>
                        <TextBlock Margin="20">点击下方"下载"按钮下载更新文件"file.zip"，并把它放在DPanel目录下，点击"完成"开始更新</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Button Margin="20" Click="Button_Click">下载</Button>
                            <Button Margin="20" Click="Button_Click_1">完成</Button>
                            <Button Margin="20" Command="hc:ControlCommands.Close">取消</Button>
                        </StackPanel>
                    </StackPanel>
                </hc:SimplePanel>
            </hc:TransitioningContentControl>
        </hc:DialogContainer>
    </Grid>
</UserControl>