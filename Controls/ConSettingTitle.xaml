<UserControl x:Class="ClassPanel.Controls.ConSettingTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClassPanel.Controls" xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <icon:PackIconBootstrapIcons Margin="2" Kind="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ConSettingTitle},Path=Kind}" />
            <TextBlock  Margin="2" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ConSettingTitle},Path=Text}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>