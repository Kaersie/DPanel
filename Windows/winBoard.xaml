<Window
    x:Class="ClassPanel.Windows.winBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:ClassPanel.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:ClassPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="1000"
    Height="500"
    AllowsTransparency="True"
    Background="{x:Null}"
    BorderBrush="#FFE6D9D9"
    Closed="Window_Closed"
    FontFamily="HarmonyOS Sans SC"
    Style="{DynamicResource ClassPanelWindow}"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStyle="None"
    mc:Ignorable="d">

    <DockPanel>
        <Grid x:Name="grid" DockPanel.Dock="Top" />
        <Grid
            x:Name="grid2"
            Margin="40,20,20,20"
            DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>